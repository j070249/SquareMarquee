<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.squaremarquee.HaloView
            android:id="@+id/haloView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:startColor="#FF88F13D"
            app:endColor="#FF03DAC5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_doge"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/haloView"
            app:layout_constraintEnd_toEndOf="@+id/haloView"
            app:layout_constraintStart_toStartOf="@+id/haloView"
            app:layout_constraintTop_toTopOf="@+id/haloView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
